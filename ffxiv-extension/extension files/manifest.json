{
    "manifest_version": 3,
    "name": "FFXIV Glamour Extension",
    "version": "1.0",
    "description": "Add locations to buy or class to craft glamour items without clicking on link.",
    "permissions": ["storage", "tabs"],

    "content_scripts": [
        {
            "js": ["scripts/app.js"],
            "matches": [
                "https://ffxiv.eorzeacollection.com/glamour/*"
            ]
        }
    ]
}
